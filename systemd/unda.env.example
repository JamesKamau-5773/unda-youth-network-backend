# Example environment file for /etc/unda/unda.env
# Copy this to /etc/unda/unda.env and update values for your environment.

# Application
FLASK_ENV=production
SECRET_KEY=replace-with-a-secure-secret
APP_URL=https://your.domain.example

# Database (Postgres example) - override as needed
# Format: postgresql://user:pass@host:5432/dbname
DATABASE_URL=postgresql://unda_user:unda_pass@127.0.0.1:5432/unda_db

# Redis (used for rate limiting, Celery broker/result)
REDIS_URL=redis://127.0.0.1:6379/0

# Optional: AWS S3 for media storage (leave empty to use local filesystem)
AWS_S3_BUCKET=
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
USE_S3=False

# Upload limits
# Max request size in bytes (example: 150MB)
MAX_CONTENT_LENGTH=157286400

# Email settings (used by Flask-Mail)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@your.domain.example

# Temporary admin provisioning (use only for emergency bootstrap)
# ADMIN_TEMP_PASSWORD=temporarystrongpassword
# ADMIN_TEMP_USERNAME=admin
# ADMIN_TEMP_EMAIL=admin@example.com

# Optional: feature flags
ENABLE_NEW_THEME=True
USE_MEMBER_PORTAL_FOR_ADVOCATES=False
